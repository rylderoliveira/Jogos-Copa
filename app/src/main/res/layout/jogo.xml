<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_time_1"
        android:layout_width="87dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/image_time_2"
        android:layout_width="87dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txt_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_time_2"
        app:layout_constraintStart_toEndOf="@+id/image_time_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_jogo" />

    <TextView
        android:id="@+id/txt_gols_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_x"
        app:layout_constraintEnd_toStartOf="@+id/txt_x"
        app:layout_constraintStart_toEndOf="@+id/image_time_1" />

    <TextView
        android:id="@+id/txt_gols_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_x"
        app:layout_constraintEnd_toStartOf="@+id/image_time_2"
        app:layout_constraintStart_toEndOf="@+id/txt_x" />

    <TextView
        android:id="@+id/txt_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Cruzeiro"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/image_time_1"
        app:layout_constraintEnd_toEndOf="@+id/image_time_1"
        app:layout_constraintStart_toStartOf="@+id/image_time_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Atletico"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/image_time_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_time_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo 1"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/image_time_2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/image_time_1"
        app:layout_constraintTop_toTopOf="@+id/image_time_1" />
</androidx.constraintlayout.widget.ConstraintLayout>